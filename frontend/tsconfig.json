{
  "compilerOptions": {
    "target": "esnext",               // Alvo para a versão mais recente do JS
    "module": "esnext",               // Use módulos ES6
    "moduleResolution": "node",       // Usar resolução de módulos do Node
    "esModuleInterop": true,          // Permitir interoperação entre módulos ES6 e CommonJS
    "declaration": true,              // Gera os arquivos .d.ts
    "allowJs": true,                  // Permite arquivos .js
    "strict": true,                   // Habilita verificações rigorosas
    "skipLibCheck": true,             // Pula verificação de tipos das bibliotecas
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",               // Saída de arquivos compilados
    "baseUrl": ".",                   // Base URL para resolução de módulos
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*"                        // Inclui todos os arquivos na pasta src
  ],
  "exclude": [
    "node_modules"                    // Exclui node_modules
  ]
}
