{
  "compilerOptions": {
    "target": "esnext",               // Usar a versão mais recente do JS
    "module": "esnext",               // Usar módulos ES6
    "moduleResolution": "node",       // Resolução de módulos como no Node.js
    "esModuleInterop": true,          // Permitir interoperabilidade entre módulos ES6 e CommonJS
    "declaration": true,              // Gerar arquivos .d.ts, opcional
    "allowJs": true,                  // Permitir arquivos .js junto com TypeScript
    "strict": true,                   // Habilitar verificações rigorosas de tipo
    "skipLibCheck": true,             // Ignorar verificação de tipo das bibliotecas
    "forceConsistentCasingInFileNames": true, // Garante consistência nos nomes de arquivos
    "outDir": "./dist",               // Diretório para arquivos compilados
    "baseUrl": ".",                   // Base URL para resolução de módulos
    "jsx": "react-jsx"                // Usar JSX para React
  },
  "include": [
    "src/**/*"                        // Incluir todos os arquivos da pasta src
  ],
  "exclude": [
    "node_modules"                    // Excluir node_modules
  ]
}
