{
  "compilerOptions": {
    "target": "esnext",               // Alvo para a versão mais recente do JS
    "module": "esnext",               // Usar módulos ES6
    "moduleResolution": "node",       // Resolução de módulos como no Node.js
    "esModuleInterop": true,          // Permitir interoperação entre módulos ES6 e CommonJS
    "declaration": true,              // Gera os arquivos .d.ts (opcional, caso precise de declarações de tipos)
    "allowJs": true,                  // Permite arquivos .js junto com TypeScript
    "strict": true,                   // Habilita verificações rigorosas de tipo
    "skipLibCheck": true,             // Ignora verificação de tipo das bibliotecas
    "forceConsistentCasingInFileNames": true, // Garante consistência de casing nos nomes de arquivos
    "outDir": "./dist",               // Diretório para arquivos compilados
    "baseUrl": ".",                   // Base URL para resolução de módulos
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx"                // Usar JSX em React
  },
  "include": [
    "src/**/*"                        // Incluir todos os arquivos da pasta src
  ],
  "exclude": [
    "node_modules"                    // Excluir node_modules
  ]
}
